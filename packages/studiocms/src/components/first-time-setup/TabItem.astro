---
import { generateID } from '@studiocms/ui/utils/generateID.js';

/**
 * The props for the TabItem component.
 */
interface Props {
	/**
	 * The icon to display next to the tab.
	 */
	icon?: string;
	/**
	 * The label of the tab.
	 */
	label: string;
	/**
	 * The color of the tab. Defaults to `primary`.
	 */
	color?: 'primary' | 'success' | 'warning' | 'danger' | 'info' | 'mono';
}

const id = generateID('tab');

const { icon, label, color = 'primary' } = Astro.props;
---
<sui-tab-item 
  data-icon={icon}
  data-label={label}
  data-color={color}
  data-tab-id={id}
>
  <slot />
</sui-tab-item>
<style>
  sui-tab-item {
    display: none;
    width: 100%;
    height: auto;
  }

  sui-tab-item.active {
    display: block;
  }
</style>