---
import { Button, Center, Icon, Input, Modal, Select } from "studiocms:ui/components";
---
<Modal
  id='create-new-user-modal'
  cancelButton={{ label: 'Cancel', color: 'default' }}
  actionButton={{ label: 'Confirm', color: 'danger' }}
  isForm
>
  <h2 slot='header'>Create New User</h2>
  <div class="modal-body">
    <p>Please save this information now. It will not be shown to you again.</p>
    <Input label="Username" name="username" type="text" isRequired />
    <Input label="Email Address" name="email" type="email" isRequired />
    <Input label="Display Name" name="display_name" type="text" isRequired />
    <Input label="Password" name="password" type="password" />
    <Select fullWidth name='rank' label='User Rank' defaultValue='visitor' options={[
      { label: 'Visitor', value: 'visitor' },
      { label: 'Editor', value: 'editor' },
      { label: 'Administrator', value: 'admin' },
      { label: 'Owner', value: 'owner' },
    ]} />
  </div>
</Modal>

<Modal
  id='create-user-invite-modal'
  cancelButton={{ label: 'Cancel', color: 'default' }}
  actionButton={{ label: 'Confirm', color: 'danger' }}
  isForm
>
  <h2 slot='header'>Create User Invite</h2>
  <div class="modal-body">
    <Input label="Username" name="username" type="text" isRequired />
    <Input label="Email Address" name="email" type="email" isRequired />
    <Input label="Display Name" name="display_name" type="text" isRequired />
    <Select fullWidth name='rank' label='User Rank' defaultValue='visitor' options={[
      { label: 'Visitor', value: 'visitor' },
      { label: 'Editor', value: 'editor' },
      { label: 'Administrator', value: 'admin' },
      { label: 'Owner', value: 'owner' },
    ]} />
  </div>
</Modal>

<Modal id='invite-response-modal'>
  <h2 slot="header">Invite Link</h2>
  <Center>
    <div class="modal-body">
      <span>This will only be shown once, please save this information.</span>
      <div class="link-container">
        <code id="invite-response-placeholder"></code>
        <Button color="primary" size="sm" class="copy-btn">
          <Icon name="document-duplicate-20-solid" width={20} height={20} />
        </Button>
      </div>
    </div>
  </Center>
</Modal>

<style>
  .modal-body {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;

    span {
      font-size: .875rem;
    }

    code {
      background-color: hsl(var(--background-step-3));
      padding: .25rem;
      border-radius: 4px;
    }

    p {
      text-align: center;
    }
  }

  .link-container {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  #invite-response-placeholder {
    white-space: nowrap;
    overflow: auto;
    text-overflow: ellipsis;
    max-width: 100%;
    height: 32px;
    display: flex;
    align-items: center;
  }

  .copy-btn {
    width: 32px !important;
    height: 32px !important;
  }
</style>
