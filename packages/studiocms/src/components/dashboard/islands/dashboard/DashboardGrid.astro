---
import DashboardGridItem, { type Props as GridItemProps } from './DashboardGridItem.astro';
import Test from './Test.astro';

const gridItems: GridItemProps[] = [
	{
		span: 2,
		variant: 'filled',
		header: { title: 'test1', icon: 'wrench-solid' },
		body: {
			html: '<span>Hello World!</span><br /><br /><test></test>',
			components: { test: Test },
		},
	},
	{ span: 1, variant: 'filled' },
	{ span: 3, variant: 'filled' },
	{ span: 1, variant: 'filled' },
	{ span: 2, variant: 'filled' },
	{ span: 1, variant: 'filled' },
	{ span: 1, variant: 'filled' },
	{ span: 1, variant: 'filled' },
];
---
<div class="dashboard-grid-container">

    { gridItems.map((item) => <DashboardGridItem {...item} />) }

</div>