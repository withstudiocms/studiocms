---
import config from 'studiocms:config';
import { runSDK, SDKCoreJs } from 'studiocms:sdk';
import { Card } from 'studiocms:ui/components/card';
import { Icon } from 'studiocms:ui/components/icon';
import { User } from 'studiocms:ui/components/user';
import { sortByDate } from './utils.js';

const totalUsers = await runSDK(SDKCoreJs.GET.users.all());

const recentlyCreatedUsers = totalUsers
	.sort((a, b) => sortByDate(a.createdAt, b.createdAt))
	.slice(0, 3);
---
<div class="recently-signed-up-users-container">
    {
        recentlyCreatedUsers.map((user) => (
            <a href={`${Astro.locals.StudioCMS.routeMap.mainLinks.userManagementEdit}/?user=${user.id}`} class="recently-signed-up-user" data-astro-reload>
                <Card class="user-card" fullWidth>
                    <div class="user-flex">
                        {/* TODO: Libravatar is causing slowdown... find a new solution? */}
                        <User 
                            name={user.name}
                            avatar={/*user.avatar ??*/ undefined} 
                            description={`Created at ${new Date(user.createdAt!).toLocaleDateString(config.locale.dateLocale, config.locale.dateTimeFormat)}`} 
                            loading='eager'
                            />
                        <Icon name="heroicons:eye" width={24} height={24} />
                    </div>
                </Card>
            </a>
        ))
    }

</div>

<style>
    .recently-signed-up-users-container {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        gap: .5rem;
    }
    
    .recently-signed-up-user {
        text-decoration: none;
        color: var(--text-normal);
    }

    .user-card {
        background-color: var(--background-step-2);
        width: 100%;
        height: 100%;
        transition: all .15s ease;
    }
    
    .user-card:hover {
        background-color: var(--background-step-3);
    }

    .user-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .user-card:hover {
        background-color: var(--background-step-3);
    }
    
</style>
