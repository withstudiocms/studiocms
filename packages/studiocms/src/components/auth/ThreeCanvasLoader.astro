---
import type { SiteConfigCacheObject } from 'studiocms:sdk/types';

interface Props {
	config: SiteConfigCacheObject;
}

// Get the site config
const { config } = Astro.props as Props;

const { loginPageBackground, loginPageCustomImage } = config.data;
---
<div 
    style="display: none;" 
    id="auth-pages-config" 
    data-config_background={loginPageBackground} 
    data-config_custom_image={loginPageCustomImage}
    />

<script>
import "studiocms:auth/scripts/three";
</script>