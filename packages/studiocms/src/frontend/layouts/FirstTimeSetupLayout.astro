---
import type { ComponentProps } from 'astro/types';
import '../styles/dashboard-base.css';
import '../styles/dashboard-diff.css';
import { dashboardConfig } from 'studiocms:config';
import { defaultLang } from 'studiocms:i18n';
import BaseLayout from './BaseLayout.astro';

interface Props extends ComponentProps<typeof BaseLayout> {}

const {
	title = 'StudioCMS Setup',
	description = 'StudioCMS Onboarding',
	lang = defaultLang,
} = Astro.props;

// Extract hideGeneratorTags from dashboardConfig
const {
	security: { hideGeneratorTags },
} = dashboardConfig;

// invert hideGeneratorTags to get generators
const generators = !hideGeneratorTags;
---

<BaseLayout {lang} {title} {description} {generators}>
  <main>
    <div class="container">
      <slot />
    </div>
  </main>
  <style>
    .container {
      margin: 0 auto;
      padding: 0 1rem;
      padding-top: 2rem;
      display: flex;
      flex-direction: column;
      height: 100vh;
      width: 100%;
    }
  </style>
</BaseLayout>
