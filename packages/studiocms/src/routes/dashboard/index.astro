---
import { useTranslations } from 'studiocms:i18n';
import DashboardPageHeader from '../../components/dashboard/DashboardPageHeader.astro';
import DashboardGrid from '../../components/dashboard/islands/dashboard/DashboardGrid.astro';
import Layout from '../../layouts/dashboard/Layout.astro';

const lang = 'en-us';
const t = useTranslations(lang, '@studiocms/dashboard:index');
---

<Layout 
  title={t('title')}
  requiredPermission='editor'
  {lang}
  >

  <div slot="header">
    <DashboardPageHeader />
    <span class="index-sub-header">{t('sub-header')}</span>
  </div>

  <DashboardGrid />

</Layout>
