---
import { authEnvCheck } from 'studiocms:auth/utils/authEnvCheck';
import { authConfig } from 'studiocms:config';
import { Button, Card, Center, Input } from 'studiocms:ui/components';
import Layout from './components/Layout.astro';
import PageHeader from './components/PageHeader.astro';
import TabItem from './components/TabItem.astro';
import Tabs from './components/Tabs.astro';

const { providers } = authConfig;

const { SHOW_OAUTH, AUTH0, DISCORD, GITHUB, GOOGLE } = await authEnvCheck(providers);

const githubEnabled = GITHUB.ENABLED && providers.github;
const discordEnabled = DISCORD.ENABLED && providers.discord;
const googleEnabled = GOOGLE.ENABLED && providers.google;
const auth0Enabled = AUTH0.ENABLED && providers.auth0;
---
<Layout title="Welcome to StudioCMS">

    <PageHeader title="Welcome to StudioCMS" badge={{ label: 'Step 2' }} />

    <Card class='card' style="background-color: hsl(var(--background-step-1))" fullWidth>

        <div slot="header">
            <h2>Create an Administrator</h2>
        </div>

        <Tabs variant='starlight'>
            <TabItem label='Username and Password'>
                <form id="setup-step-two" action={Astro.locals.routeMap.fts.step2}>
                    <div class="form-content">
                        
                        <Input 
                            label='Username' 
                            name='username' 
                            placeholder='john' 
                            isRequired 
                            />
                        
                        <Input 
                            label='Display Name' 
                            name='displayname' 
                            placeholder='John Doe' 
                            isRequired 
                            />
                        
                        <Input 
                            label='Email' 
                            name='email' 
                            placeholder='john@doe.com' 
                            isRequired 
                            />

                        <Input 
                            label='Password' 
                            name='password' 
                            placeholder='password' 
                            type="password" 
                            isRequired 
                            />

                        <Input 
                            label='Confirm Password' 
                            name='confirm-password' 
                            placeholder='password' 
                            type="password" 
                            isRequired 
                            />

                    </div>
                </form>
            </TabItem>

            {
                SHOW_OAUTH && githubEnabled && (
                    <TabItem label='GitHub' icon="simple-icons:github">
                        <Center><Button color="primary" as="a" href={Astro.locals.routeMap.authLinks.githubIndex}>Connect to GitHub</Button></Center>
                    </TabItem>
                )
            }
            {
                SHOW_OAUTH && discordEnabled && (
                    <TabItem label='Discord' icon="simple-icons:discord">
                        <Center><Button color="primary" as="a" href={Astro.locals.routeMap.authLinks.discordIndex}>Connect to Discord</Button></Center>
                    </TabItem>
                )
            }
            {
                SHOW_OAUTH && googleEnabled && (
                    <TabItem label='Google' icon="flat-color-icons:google">
                        <Center><Button color="primary" as="a" href={Astro.locals.routeMap.authLinks.googleIndex}>Connect to Google</Button></Center>
                    </TabItem>
                )
            }
            {
                SHOW_OAUTH && auth0Enabled && (
                    <TabItem label='Auth0' icon="simple-icons:auth0">
                        <Center><Button color="primary" as="a" href={Astro.locals.routeMap.authLinks.auth0Index}>Connect to Auth0</Button></Center>
                    </TabItem>
                )
            }

        </Tabs>

        <div slot="footer">
            <div class="card-actions">
                <Button type="submit" form="setup-step-two" color="primary">Continue</Button> 
            </div>
        </div>

    </Card>

    <script>
        import { toast } from 'studiocms:ui/components';

        const form = document.querySelector('#setup-step-two') as HTMLFormElement;

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(form);

            const data = {
                username: formData.get('username') as string,
                displayname: formData.get('displayname') as string,
                email: formData.get('email') as string,
                password: formData.get('password') as string,
                confirmPassword: formData.get('confirm-password') as string,
            }

            if (data.password !== data.confirmPassword) {
                toast({
                    title: 'Passwords do not match',
                    description: 'Please make sure the passwords match',
                    type: 'danger'
                });
                return;
            }

            const response = await fetch(form.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });

            if (response.ok) {
                window.location.assign('/done');
            } else {
                const error = await response.json();
                toast({
                    title: 'Error',
                    description: error.error,
                    type: 'danger',
                });
            }
        });
    </script>

    <style>
        .form-content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
    
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
    
        .login-preview-container {
            width: min-content;
            height: min-content;
        }
    
        @media screen and (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }

        .card {
            margin-left: 20%;
            margin-right: 20%;
            width: 60%;
        }

        @media screen and (max-width: 768px) {
            .card {
                margin-left: 0;
                margin-right: 0;
                width: 100%;
            }
        }

        .card-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }
    </style>

</Layout>