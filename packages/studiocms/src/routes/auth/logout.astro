---
import { useTranslations } from 'studiocms:i18n';
import AuthLayout from '../../layouts/AuthLayout.astro';

const lang = Astro.locals.StudioCMS.defaultLang;
const t = useTranslations(lang, '@studiocms/auth:logout');
---
<AuthLayout 
	title={t('title')} 
	description={t('description')} 
	{lang} 
	disableScreen
	>

</AuthLayout>

<div style="display: none;" id="redirect-to-logout" data-redirect={Astro.locals.StudioCMS.routeMap.authLinks.logoutAPI}></div>

<script>

	const redirectElement = document.getElementById('redirect-to-logout') as HTMLDivElement;
	const redirect = redirectElement.getAttribute('data-redirect') as string;

	setTimeout(() => {
		window.location.href = redirect;
	}, 500);
</script>