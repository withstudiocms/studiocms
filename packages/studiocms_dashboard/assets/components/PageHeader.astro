---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<header class="page-header">
  <div class="page-title-container">
    <h1 class="page-title">{title}</h1>
  </div>
  <div class="page-actions-container">
    <slot />
  </div>
</header>
<style>
.page-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  width: 100%;

  & .page-title-container {
    display: flex;
    flex-direction: column;
    gap: .5rem;
    width: fit-content;

    & .page-title {
      display: block;
      width: fit-content;
      margin: 0;
    }
  }

  & .page-actions-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }
}
</style>
