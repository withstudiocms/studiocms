---
import { Image } from 'astro:assets';

interface Props {
	light: ImageMetadata;
	dark: ImageMetadata;
}

const { light, dark } = Astro.props;
---
<div class="wrapper">
    <div class="before">
      <Image width={640} height={360} class="content-image light-image-holder" src={light} draggable="false" alt='Light Preview' loading={'eager'} />   
    </div>
    <div class="after">
      <Image width={640} height={360} class="content-image dark-image-holder" src={dark} draggable="false" alt='Dark Preview' loading={'eager'} />
    </div>
</div>

<style>
/* Our normalize css */
*{
  margin:0;
  box-sizing: border-box;
}

/* Our wrapper */
.wrapper{
  width: 640px;
  height: 360px;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
}

/* Our image information */
.before,
.after {
  width:100%;
  height:100%;
  background-repeat:no-repeat;
  background-color: white;
  background-size: cover;
  background-position: center;
  position: absolute;
  top:0;
  left:0;
  pointer-events:none;
  overflow: hidden;
}

.content-image{
  height:100%;
}

.after{
  width:50%;
}

@media screen and (max-width: 768px) {
  .wrapper{
    width: 320px;
    height: 180px;
  }
    
}
</style>