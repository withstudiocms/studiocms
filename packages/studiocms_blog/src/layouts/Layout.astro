---
import '../styles/base.css';
import studioCMS_SDK from 'studiocms:sdk';
import FrontLayout from 'studiocms/layouts/frontend/Layout.astro';

const config = (await studioCMS_SDK.GET.database.config()) || {
	description: 'StudioCMS - Database Unavailable',
};

interface Props {
	title: string;
	description: string;
	lang?: string | undefined;
	heroImage?: string;
	siteTitle?: string;
	siteDescription?: string;
	pageTitleDelimiter?: string;
	pageDescriptionDelimiter?: string;
}

const {
	title,
	description,
	heroImage,
	lang,
	pageDescriptionDelimiter,
	pageTitleDelimiter,
	siteDescription = config.description,
	siteTitle,
} = Astro.props;
---

<FrontLayout 
    {title} 
    {description} 
    {siteTitle} 
    {siteDescription}
    {lang}
    {heroImage} 
    {pageDescriptionDelimiter} 
    {pageTitleDelimiter} 
    >
    <slot />
</FrontLayout>