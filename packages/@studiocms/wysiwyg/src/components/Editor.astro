  const inlineStorage = (editor: Editor) => {
    editor.Storage.add("inline", {
      load() {
        return projectData;
      },
      async store(data) {
        pageContent.innerText = JSON.stringify({
          ...data,
          __STUDIOCMS_HTML: await generateHTML(editor),
        });
      },
    });
  };

