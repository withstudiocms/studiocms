{
  "name": "@studiocms/html",
  "version": "0.1.0-beta.28",
  "description": "Add HTML Support to your StudioCMS project with ease!",
  "author": {
    "name": "withstudiocms",
    "url": "https://studiocms.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withstudiocms/studiocms.git",
    "directory": "packages/@studiocms/html"
  },
  "contributors": [
    "Adammatthiesen",
    "jdtjenkins",
    "dreyfus92",
    "code.spirit"
  ],
  "license": "MIT",
  "keywords": [
    "astro",
    "astrocms",
    "astrodb",
    "astrostudio",
    "astro-studio",
    "astro-studiocms",
    "cms",
    "studiocms",
    "plugin",
    "studiocms-plugin"
  ],
  "homepage": "https://studiocms.dev",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "buildkit build 'src/**/*.{ts,astro,css,json,png,d.ts}'",
    "dev": "buildkit dev 'src/**/*.{ts,astro,css,json,png,d.ts}'",
    "test": "vitest",
    "typecheck": "tspc -p tsconfig.tspc.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./v/types": {
      "types": "./dist/virtual.d.ts",
      "default": "./dist/virtual.d.js"
    },
    "./editor": "./dist/components/editor.astro",
    "./renderer": {
      "types": "./dist/components/render.d.ts",
      "default": "./dist/components/render.js"
    }
  },
  "type": "module",
  "dependencies": {
    "astro-integration-kit": "catalog:",
    "codemirror": "5.65.19",
    "katex": "^0.16.25",
    "suneditor": "^2.47.8"
  },
  "devDependencies": {
    "@types/codemirror": "5.60.16",
    "@types/node": "catalog:"
  },
  "peerDependencies": {
    "astro": "catalog:min",
    "effect": "catalog:effect",
    "studiocms": "workspace:*",
    "vite": "catalog:min"
  }
}
