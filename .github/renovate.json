{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "group:allNonMajor",
    ":disablePeerDependencies",
    "customManagers:biomeVersions",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "dependencyDashboard": true,
  "postUpdateOptions": ["pnpmDedupe"],
  "ignorePaths": ["**/node_modules/**", "**/bower_components/**"],
  "labels": ["dependencies"],
  "additionalBranchPrefix": "{{parentDir}}-",
  "gitIgnoredAuthors": ["no-reply@studiocms.dev"],
  "prHourlyLimit": 3,
  "rangeStrategy": "bump",
  "updatePinnedDependencies": false,
  "dependencyDashboardLabels": ["TRACKER"],
  "packageRules": [
    {
      "matchDepTypes": ["packageManager", "engines"],
      "enabled": false
    },
    {
      "matchDepTypes": ["pnpm.catalog.min"],
      "enabled": false
    },
    {
      "matchFileNames": [".node-version"],
      "enabled": false
    },
    {
      "groupName": "pnpm Workspace Dependencies",
      "matchManagers": ["npm"],
      "matchFileNames": ["pnpm-workspace.yaml"]
    },
    {
      "groupName": "github-actions",
      "matchManagers": ["github-actions"],
      "updatePinnedDependencies": true,
      "pinDigests": true,
      "labels": ["github-actions"]
    },
    {
      "groupName": "Effect Dependencies",
      "matchFileNames": ["packages/@withstudiocms/effect/**"],
      "matchPackageNames": ["effect", "@effect/**"],
      "labels": ["effect-deps"]
    },
    {
      "groupName": "studiocms Dependencies",
      "matchManagers": ["npm"],
      "matchFileNames": ["packages/studiocms/**"]
    },
    {
      "groupName": "@studiocms Plugin Dependencies",
      "matchManagers": ["npm"],
      "matchFileNames": [
        "packages/@studiocms/auth0/**",
        "packages/@studiocms/blog/**",
        "packages/@studiocms/cloudinary-image-service/**",
        "packages/@studiocms/discord/**",
        "packages/@studiocms/github/**",
        "packages/@studiocms/google/**",
        "packages/@studiocms/html/**",
        "packages/@studiocms/markdoc/**",
        "packages/@studiocms/md/**",
        "packages/@studiocms/mdx/**",
        "packages/@studiocms/wysiwyg/**"
      ]
    },
    {
      "groupName": "@studiocms Integration Dependencies",
      "matchManagers": ["npm"],
      "matchFileNames": ["packages/@studiocms/devapps/**"]
    },
    {
      "groupName": "@withstudiocms Dependencies",
      "matchManagers": ["npm"],
      "matchFileNames": ["packages/@withstudiocms/**"]
    }
  ],
  "ignoreDeps": [
    "@types/node",
    "drizzle-orm",
    "sharp",
    "node",
    "npm",
    "pnpm",
    "esbuild",
    "codemirror",
    "vite"
  ]
}
