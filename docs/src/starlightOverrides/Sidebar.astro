---
import Default from '@astrojs/starlight/components/Sidebar.astro';
import Sponsors from '../components/Sponsors.astro';
import TopicsSelector from './topics/TopicsSelector.astro';
---

<div class="sidebar-custom">
    <TopicsSelector />
    <Default><slot /></Default>
    
    <div class="sl-hidden md:sl-block sidebar-footer">
        <Sponsors />
    </div>
</div>

<style>
    .sidebar-custom {
        padding: 0;
        display: flex;
        flex-direction: column;
        height: 98%;
    }
    .sidebar-footer {
        margin-top: auto;
    }
</style>
