{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": "20.14.0"
  },
  "scripts": {
    "build": "pnpm build:studiocms && pnpm --filter node-playground build",
    "build:studiocms": "pnpm --filter studiocms --filter @studiocms/* build",
    "build:docs": "pnpm build:studiocms && pnpm --filter docs build",
    "playground:dev": "pnpm --filter node-playground dev",
    "playground:push": "pnpm --filter node-playground db:push",
    "playground:preview": "pnpm --filter node-playground preview",
    "build:studiocms:main": "pnpm --filter studiocms build",
    "test:built": "pnpm build:studiocms && pnpm playground:dev",
    "test-build:studiocms": "pnpm --filter studiocms build",
    "dev:studiocms": "pnpm --stream --filter studiocms --filter @studiocms/* -r -parallel dev",
    "dev": "pnpm --stream --filter studiocms --filter @studiocms/* --filter node-playground -r -parallel dev",
    "cli:test": "pnpm studiocms",
    "changeset": "changeset",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "ci:prepublish": "pnpm build:studiocms",
    "ci:lint": "biome ci --formatter-enabled=true --organize-imports-enabled=true  --reporter=github",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm changeset publish",
    "ci:translations:changeset": "tsm --require=./scripts/filter-warnings.cjs ./scripts/translation-changeset.ts",
    "ci:snapshot": "pnpx pkg-pr-new publish --pnpm './packages/*'",
    "knip": "knip",

    "ci:crowdin:bot": "tsm --require=./scripts/filter-warnings.cjs ./scripts/crowdin-report-bot.ts"
  },
  "devDependencies": {
    "@actions/core": "1.11.1",
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.28.1",
    "@changesets/config": "3.1.1",
    "@changesets/write": "0.4.0",
    "@crowdin/crowdin-api-client": "1.41.4",
    "@types/node": "catalog:",
    "@withstudiocms/buildkit": "workspace:*",
    "execa": "9.5.2",
    "knip": "5.46.0",
    "pkg-pr-new": "0.0.41",
    "studiocms": "workspace:*",
    "tsm": "2.3.0",
    "typescript": "catalog:",
    "tinyglobby": "0.2.12"
  }
}
