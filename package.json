{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": "22.8.0"
  },
  "scripts": {
    "build": "pnpm build:studiocms && pnpm --filter node-playground build",
    "build:studiocms": "pnpm --filter studiocms --filter @studiocms/* --filter @withstudiocms/* build",
    "playground:dev": "pnpm --filter node-playground dev",
    "playground:push": "pnpm --filter node-playground db:push",
    "playground:preview": "pnpm --filter node-playground preview",
    "build:studiocms:main": "pnpm --filter studiocms build",
    "test:built": "pnpm build:studiocms && pnpm playground:dev",
    "test-build:studiocms": "pnpm --filter studiocms build",
    "dev:studiocms": "pnpm --stream --filter studiocms --filter @studiocms/* --filter @withstudiocms/* -r --parallel dev",
    "dev": "pnpm --stream --filter studiocms --filter @studiocms/* --filter @withstudiocms/* --filter node-playground -r --parallel dev",
    "cli:test": "pnpm --filter node-playground studiocms",
    "changeset": "changeset",
    "knip": "knip",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "ci:prepublish": "pnpm build:studiocms",
    "ci:lint": "biome ci --formatter-enabled=true --organize-imports-enabled=true  --reporter=github",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm changeset publish",
    "ci:snapshot": "pnpx pkg-pr-new publish --pnpm './packages/*'",
    
    "ci:typecheck:studiocms": "pnpm --filter @withstudiocms/* build && pnpm --filter studiocms typecheck",
    "ci:typecheck:studiocms-packages": "pnpm --filter studiocms --filter @withstudiocms/* build && pnpm --filter @studiocms/* typecheck",
    "ci:typecheck:withstudiocms": "pnpm --filter @withstudiocms/* build && pnpm --filter @withstudiocms/* typecheck",

    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "ci:test": "vitest run --coverage",

    "clean:node": "node ./scripts/clean-node-modules.mjs",
    "postinstall": "ts-patch install"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@biomejs/biome": "2.1.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@changesets/config": "^3.1.1",
    "@changesets/write": "^0.4.0",
    "@crowdin/crowdin-api-client": "^1.47.1",
		"@effect/language-service": "^0.40.0",
    "@effect/vitest": "^0.25.1",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@withstudiocms/buildkit": "workspace:*",
    "@inox-tools/astro-tests": "^0.8.0",
    "execa": "^9.6.0",
    "knip": "^5.63.1",
    "pkg-pr-new": "^0.0.60",
    "studiocms": "workspace:*",
    "typescript": "catalog:",
		"ts-patch": "^3.3.0",
    "vitest": "^3.2.4"
  }
}
