---

interface Props {
	/**
	 * A string property.
	 * 
	 * @default Hello World
	 */
	foo: string;
	/**
	 * A number property.
	 * 
	 * @default 42
	 */
	bar: number;
	/**
	 * Example Template literal
	 * 
	 * @default foo-bar-baz.42
	 */
	tempLit: `${string}-${string}-${string}.${number}`;
}
---

<div>
	<h1>Test Component</h1>
	<p>This is a test component for the WYSIWYG editor.</p>
	<hr />
	<p>Props:</p>
	<p>Foo: {Astro.props.foo}</p>
	<p>Bar: {Astro.props.bar}</p>
	<p>Template Literal: {Astro.props.tempLit}</p>
	<hr />
	<slot />
</div>